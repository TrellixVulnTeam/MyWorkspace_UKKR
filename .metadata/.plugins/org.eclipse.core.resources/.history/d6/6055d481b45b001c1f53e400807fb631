package faith.success;

import java.util.Scanner;

public class ArrayTest {

	int[] stdID = new int[] { 1, 2, 3, 4, 5, 6 };

	String[] stdName = new String[6];

	public void arrInput() {

		Scanner sc = new Scanner(System.in);

		for (int i = 0; i < stdName.length; i++) {

			int j = 1;
			System.out.print("Please Enter the Name of" + " " + j + "" + "Student" + " " + ":");

			String nameStud = sc.nextLine();

			stdName[i] = nameStud;
			// String stdList[] = stdName;

			j++;

		}

		System.out.println(stdName);

	}

	public static void main(String[] args) {

		ArrayTest ar = new ArrayTest();
		ar.arrInput();

	}

}
